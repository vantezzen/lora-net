{
  "name": "lora-net",
  "version": "1.0.0",
  "description": "Console App for building an adhoc, multihop network using LoRa wireless modules",
  "main": "index.js",
  "scripts": {
    "build": "tsc -p .",
    "start": "ts-node src/main.ts",
    "watch": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts",
    "package-test": "ts-node src/packageTest.ts",
    "run-virtual": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/virtual/main.ts"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "cli-diagram": "^0.3.0",
    "cli-progress": "^3.9.1",
    "cli-table": "^0.3.9",
    "debug": "^4.3.3",
    "glob": "^7.2.0",
    "inquirer": "^8.2.0",
    "serialport": "^9.2.8"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.9.2",
    "@types/cli-table": "^0.3.0",
    "@types/glob": "^7.2.0",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^16.11.11",
    "@types/serialport": "^8.0.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  }
}
